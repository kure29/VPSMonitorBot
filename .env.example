# VPS监控系统 v1.0 - 环境变量示例文件
# 作者: kure29
# 网站: https://kure29.com
# 
# 复制此文件为 .env 并填入真实值
# cp .env.example .env

# ==============================================
# Telegram Bot 配置
# ==============================================

# Telegram Bot Token (从 @BotFather 获取)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz-123456789

# Telegram Chat ID (从 @userinfobot 获取)
TELEGRAM_CHAT_ID=123456789

# ==============================================
# 监控配置
# ==============================================

# 检查间隔（秒）
CHECK_INTERVAL=300

# 最大通知次数
MAX_NOTIFICATIONS=3

# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# 重试延迟（秒）
RETRY_DELAY=60

# ==============================================
# 网络配置
# ==============================================

# 用户代理
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"

# HTTP代理（可选）
# HTTP_PROXY=http://proxy.example.com:8080

# HTTPS代理（可选）
# HTTPS_PROXY=https://proxy.example.com:8080

# SOCKS代理（可选）
# SOCKS_PROXY=socks5://proxy.example.com:1080

# ==============================================
# 日志配置
# ==============================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=monitor.log

# 是否启用调试模式
DEBUG=false

# ==============================================
# 数据库配置
# ==============================================

# 数据文件路径
DATA_FILE=urls.json

# 备份目录
BACKUP_DIR=backup

# 自动备份间隔（小时）
BACKUP_INTERVAL=24

# ==============================================
# Web界面配置（可选）
# ==============================================

# Web服务器端口
WEB_PORT=8000

# Web服务器地址
WEB_HOST=0.0.0.0

# 是否启用Web界面
ENABLE_WEB=false

# Web界面密码（可选）
# WEB_PASSWORD=your_secure_password

# ==============================================
# 安全配置
# ==============================================

# API密钥（用于外部集成）
# API_KEY=your_api_key_here

# JWT密钥（用于认证）
# JWT_SECRET=your_jwt_secret_here

# ==============================================
# 邮件通知配置（可选）
# ==============================================

# SMTP服务器
# SMTP_SERVER=smtp.gmail.com

# SMTP端口
# SMTP_PORT=587

# 邮箱用户名
# EMAIL_USER=your_email@gmail.com

# 邮箱密码或应用密码
# EMAIL_PASSWORD=your_app_password

# 发件人显示名称
# EMAIL_FROM_NAME=VPS Monitor

# 收件人邮箱
# EMAIL_TO=recipient@example.com

# ==============================================
# 钉钉通知配置（可选）
# ==============================================

# 钉钉机器人Webhook URL
# DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=xxx

# 钉钉机器人密钥
# DINGTALK_SECRET=your_dingtalk_secret

# ==============================================
# 企业微信通知配置（可选）
# ==============================================

# 企业微信机器人Webhook URL
# WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxx

# ==============================================
# 监控高级配置
# ==============================================

# 并发检查数量
CONCURRENT_CHECKS=5

# 请求重试次数
MAX_RETRIES=3

# 失败重试间隔（秒）
RETRY_INTERVAL=60

# Cookie持久化
PERSIST_COOKIES=true

# 会话超时（秒）
SESSION_TIMEOUT=300

# ==============================================
# 性能配置
# ==============================================

# 内存缓存大小（MB）
CACHE_SIZE=64

# 缓存过期时间（秒）
CACHE_EXPIRE=3600

# 最大工作线程数
MAX_WORKERS=4

# ==============================================
# 通知过滤配置
# ==============================================

# 静默时间段开始（24小时制）
QUIET_HOURS_START=22

# 静默时间段结束（24小时制）
QUIET_HOURS_END=8

# 是否启用静默模式
ENABLE_QUIET_HOURS=false

# 最小通知间隔（秒）
MIN_NOTIFICATION_INTERVAL=60

# ==============================================
# 系统集成配置
# ==============================================

# 时区设置
TIMEZONE=Asia/Shanghai

# 语言设置
LANGUAGE=zh_CN

# 字符编码
ENCODING=utf-8

# ==============================================
# 开发配置
# ==============================================

# 是否为开发环境
DEVELOPMENT=false

# 测试模式
TEST_MODE=false

# 模拟请求延迟（毫秒，仅测试用）
# MOCK_DELAY=1000

# ==============================================
# 监控报警配置
# ==============================================

# 连续失败次数阈值
FAILURE_THRESHOLD=5

# 服务不可用报警
SERVICE_DOWN_ALERT=true

# 内存使用报警阈值（MB）
MEMORY_ALERT_THRESHOLD=256

# CPU使用报警阈值（百分比）
CPU_ALERT_THRESHOLD=80

# ==============================================
# 备份和恢复配置
# ==============================================

# 是否启用自动备份
AUTO_BACKUP=true

# 备份保留天数
BACKUP_RETENTION_DAYS=30

# 备份压缩
BACKUP_COMPRESS=true

# 远程备份URL（可选）
# REMOTE_BACKUP_URL=ftp://backup.example.com/vps-monitor/
