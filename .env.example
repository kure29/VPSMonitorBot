# VPS监控系统环境变量配置示例
# 复制此文件为 .env 并填入实际值

# Telegram配置
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# 监控配置
CHECK_INTERVAL=300
MAX_NOTIFICATIONS=3
REQUEST_TIMEOUT=30

# 数据库配置 (可选)
DATABASE_URL=sqlite:///vps_monitor.db
# DATABASE_URL=postgresql://user:pass@localhost/vps_monitor
# DATABASE_URL=mysql://user:pass@localhost/vps_monitor

# Redis配置 (可选)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/monitor.log
MAX_LOG_FILE_SIZE=10485760

# Web界面配置 (可选)
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_SECRET_KEY=your_secret_key_here

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=

# 通知配置
ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# 代理配置 (如果需要)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# 安全配置
ALLOWED_IPS=127.0.0.1,::1
API_RATE_LIMIT=100
